rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users collection
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if isAdmin();
    }
    
    // Feedback collection
    match /feedback/{feedbackId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && 
                     (resource.data.uatId == request.auth.uid || isAdmin());
      allow update, delete: if isAdmin();
    }

    // Contracts collection (Agricultural Registry)
    match /contracts/{contractId} {
      // Allow users to create contracts if they are authenticated
      // We validate that the uatId in the data matches their auth uid
      allow create: if request.auth != null && request.resource.data.uatId == request.auth.uid;
      
      // Allow users to read/update/delete ONLY their own contracts
      allow read, update, delete: if request.auth != null && 
                                     (resource.data.uatId == request.auth.uid || isAdmin());
    }

    // UTRs collection
    match /utrs/{utrId} {
      // Admins can do everything (create, update, delete)
      allow write: if isAdmin();
      // Admins and authenticated users (City Halls) can read
      allow read: if request.auth != null;
    }

    // Urbanism Certificates collection
    match /urbanism_certificates/{certificateId} {
      // Allow UAT users to create certificates for their own UAT
      allow create: if request.auth != null && request.resource.data.uatId == request.auth.uid;
      
      // Allow UAT users to READ their own certificates
      allow read: if request.auth != null && 
                     (resource.data.uatId == request.auth.uid || isAdmin());
      
      // Allow UAT users to update/delete ONLY their own certificates
      allow update, delete: if request.auth != null && 
                              (resource.data.uatId == request.auth.uid || isAdmin());
    }

    // GIS Data Entries collection
    match /gis_data_entries/{entryId} {
      // UAT users can create entries for their own UAT
      // Validate that uatId matches authenticated user and status is 'pending'
      allow create: if request.auth != null && 
                       request.resource.data.uatId == request.auth.uid &&
                       request.resource.data.status == 'pending';
      
      // UAT users can read their own entries
      allow read: if request.auth != null && 
                     (resource.data.uatId == request.auth.uid || isAdmin());
      
      // Only admins can update entries (to change status from pending to processed)
      allow update: if isAdmin();
      
      // Only admins can delete entries
      allow delete: if isAdmin();
    }
  }
}
